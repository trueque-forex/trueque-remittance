{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "jsx": "react-jsx",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "types": ["node", "vitest"],
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "src",
    "components",
    "pages",
    "backend"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}